<html>
<head>
<meta charset="utf-8"/>
<meta name="viewport" content="width=device-width, initial-scale=1">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<link rel="stylesheet" href="bootstrapmincss.css" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
<link rel="stylesheet" href="fontawesomemin.css">
<!--<link rel="stylesheet" type="text/css" href="//netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css">-->
<link rel="stylesheet" href="newsfeed.css">
<link rel="stylesheet" href="posts.css">
<script src="newsfeed.js"></script>
<link rel="stylesheet" href="progress.css">
<link rel="stylesheet" href="progressouter.css">
<script src="progress.js"></script>
<title>Eco Change</title>
<link rel="icon" href="planet_earth.png" type="image/icon type">

</head>
<!------ Include the above in your HEAD tag ---------->
<body>
   <div id="wrapper">

        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <a href="/newsfeed" id="brandname">
                        EcoChange <img id="logo"src="planet_earth.png"/>
                    </a>
                </li>
                <div id="profilename">{{username}}<img id="onlinelogo" src="profileonline.png"/></div>
                <li>
                    <a href="/newsfeed"> <img id="sidelogo" src="sidepanel_message.png"/> NewsFeed</a>
                </li>
                <li>
                    <a href="/makepost"><img id="sidelogo" src="article.png"/>Make Post</a>
                </li>

                <li>
                    <a href="/progress"> <img id="sidelogo" src="sidepanel_progress.png"/> Progress</a>
                </li>
                
                <li>
                    <a href="/userprofile"><img id="sidelogo" src="sidepanel_profile.png"/> Profile</a>
                </li>
               
                <li onclick="logout()">
                    <a href="/logout"> <img id="sidelogo" src="sidepanel_logout.png"/> Logout</a>
                </li>
            </ul>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <a class="btn btn-default" id="menu-toggle" onclick="mytoggle()"><img id="logo" src="hamburger.png"/></a>

                        
                        <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet"> 
                        <div class="container bootstrap snippet centered">
                            <div class="col-md-4">
                              <!-- START widget-->
                              <div class="panel widget" id="progstat">
                                 <div class="panel-body bg-danger text-center">
                                    
                                    <h4 class="mt0">Progress</h4>
                                    <div class="row">
                                        <div class="col-md-3 col-sm-6">
                                            <div class="progress green">
                                                <span class="progress-left">
                                                    <span class="progress-bar"></span>
                                                </span>
                                                <span class="progress-right">
                                                    <span class="progress-bar"></span>
                                                </span>
                                                <div class="progress-value" value="{{number}}">{{number}}%</div>
                                            </div>
                                        </div>
                                    </div>
                                    <ol id="thingsdone" class="listgroup">
                                        {{#each list}}
                                        <li class="list-group-item">{{this.content}}</li>
                                        {{/each}}
                                    </ol>
                                    
                                 </div>
                              </div>
                              <!-- END widget-->
                           </div>
                            <div class="col-md-8">
                                <form action="/progress" method="POST">
                                <input type="hidden" name="_id" value="{{progress._id}}">
                                <textarea class="form-control custom-control" rows="3" style="resize:none"
                                name="content" placeholder="Content" value="{{progress.content}}">
                                </textarea>
                                <div class="text-danger">
                                {{progress.contentError}}</div>    
                                <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Add</button>
                                </form>
                            </div>

                            <!---->
                           </div>
                        </div>
                       

                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->
</body>
